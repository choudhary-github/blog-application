<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
  <body>
    <%- include('navbar') %>

    <div class="container mt-3">
      <form
        action="/create"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label class="mb-2" for="title">Cover Image</label>
          <input
            required
            name="cover"
            type="file"
            accept="image/*"
            class="form-control"
            id="cover"
          />
        </div>
        <div class="mb-3">
          <label class="mb-2" for="title">Title</label>
          <input
            required
            name="title"
            type="title"
            class="form-control"
            id="title"
            placeholder="Your Blog Title"
          />
        </div>
        <div class="mb-2">
          <label class="mb-2" for="body">Body</label>
          <textarea
            required
            class="form-control"
            placeholder="Write about your blog"
            name="body"
            id="body"
            style="height: 100px"
          ></textarea>
        </div>
        <div class="d-flex justify-content-start">
          <button type="submit" class="btn btn-primary mt-3 ms-auto">
            Submit
          </button>
        </div>
      </form>
    </div>
    <%- include('partials/script') %>
  </body>
</html>
